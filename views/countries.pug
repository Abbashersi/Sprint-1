doctype html
html
  head
    title Countries by Population
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles.css')
    style.
      body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
        color: #333;
      }
      .navbar {
        background-image: url('/countries.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: #fff;
        padding: 15px 0;
      }
      .navbar-brand, .nav-link {
        font-weight: bold;
        color: #ffffff !important;
      }
      .navbar-brand:hover, .nav-link:hover {
        color: #f1f1f1 !important;
      }
      .table-container {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
      }
      .table thead th {
        background-color: #343a40;
        color: white;
        font-weight: bold;
      }
      .table tbody tr:hover {
        background-color: #f1f1f1;
      }
      .footer {
        background-color: #343a40;
        color: white;
        padding: 20px 0;
        position: relative;
        width: 100%;
        text-align: center;
      }
      .footer a {
        color: #6c757d;
        text-decoration: none;
        margin: 0 10px;
      }
      .footer a:hover {
        color: #e9ecef;
      }
  body
    nav.navbar.navbar-expand-lg.navbar-dark
      .container-fluid
        a.navbar-brand(href='#') Population Info
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.active(href='/countries') Countries
            li.nav-item
              a.nav-link(href='/cities') Cities
            li.nav-item
              a.nav-link(href='/about') About
            li.nav-item
              a.nav-link(href='/contact') Contact
    .container
      .row
        .col-12
          .table-container
            h1.text-center.mb-4 Countries by Population
            p.lead.text-center
              | Explore detailed information on countries around the world, organized by population. Click on the column headers to sort the data.
            .text-end.mb-3
              form(method='GET', action='/search')
                .input-group
                  input.form-control(type='text', name='query', placeholder='Search countries...')
                  button.btn.btn-primary(type='submit') Search
            table.table.table-striped.table-hover.table-bordered.table-responsive
              thead
                tr
                  th Code
                  th Name
                  th Continent
                  th Region
                  th Population
                  th Capital
              tbody
                if countries && countries.length
                  each country in countries
                    tr
                      td= country.Code
                      td= country.Name
                      td= country.Continent
                      td= country.Region
                      td= country.Population
                      td= country.Capital
                else
                  tr
                    td(colspan="6") No data available
    footer.footer
      .container
        p.mb-0 &copy; 2024 Population Info. All rights reserved.
        p.mb-0
          a(href='#') Privacy Policy
          | |
          a(href='#') Terms of Service
          | |
          a(href='#') Contact
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js')

