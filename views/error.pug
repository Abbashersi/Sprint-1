doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css')
  body
    .container.mt-5
      .alert.alert-danger
        h4= title
        p= message
      table.table.table-striped.table-hover.table-bordered.mt-3
        thead
          tr
            th Code
            th Name
            th Continent
            th Region
            th Population
            th Capital
        tbody
          if countries && countries.length
            each country in countries
              tr
                td= country.Code
                td= country.Name
                td= country.Continent
                td= country.Region
                td= country.Population
                td= country.Capital
          else
            tr
              td(colspan="6") No data available
